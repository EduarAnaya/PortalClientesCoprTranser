@model IEnumerable<PortalClientesCoprTranser.Models.Viajes.Viajes>

@if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
{
    <div class="alert alert-primary">
        <a href="#" class="close" data-dismiss="alert">×</a>
        @Html.ValidationSummary(true, "Aviso:")
        @Html.ValidationMessage("Error")
    </div>
}
@using PortalClientesCoprTranser.Models.Viajes;
<h4>Resultados de busqueda</h4>
<div id="cont-tableRes-histoViaj" class="table-responsive">
    <div class="col">
        <script>
            $(function () {
                var opcionies = {
                    "scrollY": "30rem",
                    "scrollCollapse": true
                }
                $('#table_ViajHisto').DataTable(opcionies);
            })
        </script>


        <div class="row cont-Col">
            <div id="cont-tableHistoFac" class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                <div class="card card-Transparente">
                    <div class="card-header text-left">
                        <i class="fas fa-list-ol"></i>Listado
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="table_ViajHisto" class="display table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Orden</th>
                                        <th>Planilla</th>
                                        <th>Fecha</th>
                                        <th>Vehiculo</th>
                                        <th>Origen</th>
                                        <th>Destino</th>
                                        <th>Conductor</th>
                                        <th>Producto</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var viaje in Model)
                                    {
                                        <tr>
                                            <td class="idOrca">@viaje.ORDEN</td>
                                            <td>@viaje.PLANILLA</td>
                                            <td>@viaje.FECHA</td>
                                            <td>@viaje.VEHICULO</td>
                                            <td>@viaje.CIUORIGEN</td>
                                            <td>@viaje.CIUDESTINO</td>
                                            <td>@viaje.NOMB_CONDUCTOR @viaje.APELL_CONDUCTOR</td>
                                            <td>@viaje.NOMPRODUCT</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
